/* pages/take_advice.wxss */
.all {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%;
  background-color: #F7F7FA; 
}
.form {
  position:relative;
  top:50rpx;
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: 0 auto;
}
.row {
  margin: 50rpx auto 0;
  font-size: smaller;
  border: 1px solid rgb(137, 142, 137);
  border-radius: 0.3rem;
  width: 100%;
  height: 500rpx;
}
.row1 {
  display: flex;
  justify-content: center;
  position: relative;
  top: 30rpx;
  font-size: smaller;
  width: 100%;
  height: 50rpx;
}
.row1 button{
  display: inline-flex;
  position: relative;
  font-size: large;
  width: 150rpx;
  height: 80rpx;
  justify-content: center;
}
.phone {
  display: flex;
  justify-content: center;
  top: 150rpx;
  position: relative;
  flex-direction: column;
}
.phone text{
  display: inline-flex;
  position: relative;
  justify-content: center;
  font-size: smaller;
}
