.all {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%;
  background-color: #F7F7FA; 
}
.table{
  display: flex;
  position: relative;
  flex-direction: column;
  width: 100%;
  margin: 0 auto;
  top: 20rpx;
  /* color: rgb(198, 155, 104); */
}
.row{
  position: relative;
  height: 50rpx;
  font-size: smaller;
  /* border-radius: 0.3rem; */
}
.text0{
  display: inline-block;
  line-height: 50rpx;
  /* border: 1px solid rgb(149, 153, 150);
  border-top-left-radius: 0.3rem;
  border-bottom-left-radius: 0.3rem; */
  width: 29%;
  text-align: center;
}
.text1{
  display: inline-block;
  line-height: 50rpx;
  /* border: 1px solid rgb(149, 153, 150); */
  width: 40%;
  text-align: center;
}
.text2{
  display: inline-block;
  position: relative;
  line-height: 50rpx;
  /* border: 1px solid rgb(149, 153, 150);
  border-top-right-radius: 0.3rem;
  border-bottom-right-radius: 0.3rem; */
  text-align: center;
  width: 29%;
}
.item{
  background-color: white;
  position: relative;
  margin-top: 20rpx;
}
.content{
  top: 10rpx;
  position: relative;
}
.content_ul{ 
  position: relative;
  font-size: smaller;
}
.text2 text{
  display: inline-block;
  line-height: 50rpx;
  text-align: center;
  border: 0;
}
.text2 image{
  display: inline-block;
  position: relative;
  left: 25rpx;
  top: 8rpx;
  width: 35rpx;
  height: 35rpx;
}
.content_detail {
  display:none;
  position: relative;
  overflow-y: scroll;
  color: rgb(198, 155, 104);
}
@keyframes show{
  from{
    transform: translateY(-0%);
  }
  to{
    transform: translateY(0%);
  }
}
.content_detail.show {
  display:block;
  animation:show 0.5s  ease-in both;
  border: 1px solid rgb(149, 153, 150);
  border-radius: 0.3rem;
}
