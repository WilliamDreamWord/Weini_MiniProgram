<!--component/popup/popup.wxml-->
<view class="wx-popup" hidden="{{flag}}">
  <view class='popup-container'>
    <view class="wx-popup-title">{{title}}</view>
    <view class="wx-popup-con">{{fisrt_content}}</view>
    <view class='wx-popup-con'>{{sencond_content}}</view>
    <view class="wx-popup-btn">
      <text class="btn-no" bindtap='_error' style='background-color: rgb(251, 248, 227);'>{{btn_no}}</text>
      <text class="btn-ok" bindtap='_success' style='background-color: rgb(251, 248, 227);'>{{btn_ok}}</text>
    </view>
  </view>
</view>
